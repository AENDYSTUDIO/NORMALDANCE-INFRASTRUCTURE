# Database
# For Development (SQLite):
DATABASE_URL="file:./db/custom.db"

# For Production, use .env.production with PostgreSQL:
# See .env.production.example for production configuration

# NextAuth
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Solana Configuration
NEXT_PUBLIC_SOLANA_RPC_URL="https://api.devnet.solana.com"
SOLANA_RPC_TIMEOUT="8000"

# WalletConnect Configuration
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID="your-walletconnect-project-id-here"

# Web3 Program IDs - ЗАМЕНИТЕ НА РЕАЛЬНЫЕ АДРЕСА РАЗВЕРНУТЫХ ПРОГРАММ!
NEXT_PUBLIC_NDT_PROGRAM_ID="NDT1111111"
NEXT_PUBLIC_NDT_MINT_ADDRESS="11111111111"
NEXT_PUBLIC_TRACKNFT_PROGRAM_ID="TRACKNFT111111111"
NEXT_PUBLIC_STAKING_PROGRAM_ID="STAKING1111111111111"

# IPFS Configuration
NEXT_PUBLIC_IPFS_GATEWAY="https://ipfs.io"
PINATA_API_KEY="your-pinata-api-key-here"
PINATA_SECRET_KEY="your-pinata-secret-key-here"
PINATA_JWT="your-pinata-jwt-here"

# IPFS Backend Configuration
IPFS_BACKEND="legacy"  # helia or legacy

# CDN Configuration
CDN_PROVIDER="cloudflare"

# OAuth Providers (optional)
SPOTIFY_CLIENT_ID="your-spotify-client-id"
SPOTIFY_CLIENT_SECRET="your-spotify-client-secret"
APPLE_CLIENT_ID="your-apple-client-id"
APPLE_CLIENT_SECRET="your-apple-client-secret"

# Redis (for production)
REDIS_URL="redis://localhost:6379"

# Sentry (for error tracking)
SENTRY_DSN="your-sentry-dsn-here"
NEXT_PUBLIC_SENTRY_DSN="your-public-sentry-dsn-here"

# Telegram Integration 2025
TELEGRAM_BOT_TOKEN="your-telegram-bot-token-here"
TELEGRAM_WEB_APP_URL="https://normaldance.com/telegram"
TELEGRAM_WEBHOOK_URL="https://normaldance.com/api/telegram/webhook"
TELEGRAM_CHAT_ID="your-telegram-chat-id"

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# LangGraph Configuration
LANGGRAPH_API_KEY="your-langgraph-api-key"
LANGGRAPH_BASE_URL="https://api.langserve.com"
LANGGRAPH_MODEL_NAME="gpt-4"
LANGGRAPH_TEMPERATURE=0.7
LANGGRAPH_MAX_TOKENS=4000

# OpenAI Configuration (for LangGraph)
OPENAI_API_KEY="your-openai-api-key"
OPENAI_BASE_URL="https://api.openai.com/v1"

# Audio Processing Configuration
AUDIO_PROCESSING_ENABLED=true
AUDIO_FFmpeg_PATH="./ffmpeg-static/ffmpeg.exe"
AUDIO_MAX_FILE_SIZE=100000000
AUDIO_SUPPORTED_FORMATS="mp3,wav,flac,aac,ogg"

# AI/ML Configuration
AI_ENABLED=true
AI_PROVIDER="openai"
AI_CACHE_ENABLED=true
AI_CACHE_TTL=3600

# JWT Configuration
JWT_SECRET="your-jwt-secret-key-here"

# Upstash Redis Configuration (for rate limiting)
UPSTASH_REDIS_REST_URL="https://your-upstash-redis-url.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"

# Analytics Configuration
MIXPANEL_TOKEN="your-mixpanel-token"