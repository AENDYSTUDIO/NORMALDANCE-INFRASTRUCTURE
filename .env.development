# Development environment variables
# Override base .env for development

# Database
DB_PASSWORD=devpassword
DATABASE_URL=postgresql://postgres:devpassword@postgres:5432/normaldance

# JWT
JWT_SECRET=dev-jwt-secret-key-for-development-only

# API Keys (use test keys for development)
REGRU_API_KEY=dev-regru-api-key
REGRU_USERNAME=dev-regru-username
PRIVATE_KEY=dev-private-key-for-smart-contracts

# Monitoring
GRAFANA_ADMIN_PASSWORD=devadmin

# Next.js
NEXT_PUBLIC_API_URL=http://localhost:4000

# Node.js
NODE_ENV=development
DEBUG=backend:*,regru:*,hardhat:*

# Domains for development (localhost)
FRONTEND_DOMAIN=localhost:3000
API_DOMAIN=localhost:4000
PROMETHEUS_DOMAIN=localhost:9090
GRAFANA_DOMAIN=localhost:3001

# Development tools
PGADMIN_DEFAULT_EMAIL=admin@dev.local
PGADMIN_DEFAULT_PASSWORD=devpassword
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025