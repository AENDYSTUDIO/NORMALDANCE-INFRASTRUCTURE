name: metrics

on:
  schedule:
    - cron: '0 9 * * *'
  workflow_dispatch: {}

jobs:
  metrics:
    runs-on: ubuntu-latest
    permissions:
      contents: write
    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0
      - uses: actions/setup-node@v4
        with:
          node-version: '20'
      - name: Run metrics
        run: bash scripts/metrics.sh
      - name: Commit metrics
        run: |
          git config user.name "github-actions"; git config user.email "actions@github.com"
          git add metrics/*.csv metrics/*.json README.md || true
          git commit -m "chore(metrics): daily update" || true
          git push

