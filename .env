# Base environment variables
# Domain configuration
DOMAIN=example.com
FRONTEND_DOMAIN=frontend.${DOMAIN}
API_DOMAIN=api.${DOMAIN}
PROMETHEUS_DOMAIN=prometheus.${DOMAIN}
GRAFANA_DOMAIN=grafana.${DOMAIN}

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=normaldance
DB_USER=postgres
DB_PASSWORD=changeme
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Redis
REDIS_URL=redis://redis:6379

# API Keys (change in production)
REGRU_API_KEY=your-regru-api-key
REGRU_USERNAME=your-regru-username
PRIVATE_KEY=your-private-key-for-smart-contracts

# Monitoring
GRAFANA_ADMIN_PASSWORD=admin

# Next.js
NEXT_PUBLIC_API_URL=https://${API_DOMAIN}

# Node.js
NODE_ENV=development
DEBUG=*

# IPFS
IPFS_PATH=/data/ipfs

# Hardhat
HARDHAT_NETWORK=localhost

# Traefik
TRAEFIK_LETSENCRYPT_EMAIL=admin@example.com