{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "noImplicitAny": true, // Allow implicit any for Web3 compatibility as per AGENTS.md
    "strictNullChecks": true, // Keep strict null checks for safety
    "noUnusedLocals": false, // Allow unused locals during development
    "noUnusedParameters": false, // Allow unused parameters during development
    "exactOptionalPropertyTypes": false, // Allow optional properties for Web3 compatibility
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "tests",
    "mobile-app/**",
    "src/components/staking/**/*",
    "src/components/profile/social-integration.tsx",
    "src/components/dex/dual-currency-system.tsx",
    "src/components/dex/**/*",
    "normal-dance-vercel/**",
    "src/agents/**",
    "src/components/unified/**/*",
    "src/lib/defi/**/*",
    "src/lib/did/**/*",
    "src/lib/layer-2/**/*",
    "src/lib/web3/nft-enhanced-system.ts",
    "src/lib/web3/web3-service.ts"
  ]
}
