# Production environment variables
# Override base .env for production

# Database
DB_HOST=prod-db
DB_PASSWORD=prod-db-password-change-this
DATABASE_URL=postgresql://postgres:${DB_PASSWORD}@${DB_HOST}:5432/normaldance

# JWT
JWT_SECRET=prod-jwt-secret-key-change-this-in-production

# API Keys (use production keys)
REGRU_API_KEY=prod-regru-api-key
REGRU_USERNAME=prod-regru-username
PRIVATE_KEY=prod-private-key-for-smart-contracts

# Monitoring
GRAFANA_ADMIN_PASSWORD=prod-grafana-admin-password

# Next.js
NEXT_PUBLIC_API_URL=https://${API_DOMAIN}

# Node.js
NODE_ENV=production
DEBUG=

# Domains for production
DOMAIN=yourdomain.com
FRONTEND_DOMAIN=frontend.${DOMAIN}
API_DOMAIN=api.${DOMAIN}
PROMETHEUS_DOMAIN=prometheus.${DOMAIN}
GRAFANA_DOMAIN=grafana.${DOMAIN}

# Traefik
TRAEFIK_LETSENCRYPT_EMAIL=admin@yourdomain.com

# Production secrets (use external secrets management)
# These should be set via docker secrets or external env vars
# DB_PASSWORD_FILE=/run/secrets/db_password
# JWT_SECRET_FILE=/run/secrets/jwt_secret
# REGRU_API_KEY_FILE=/run/secrets/regru_api_key
# PRIVATE_KEY_FILE=/run/secrets/private_key
# GRAFANA_ADMIN_PASSWORD_FILE=/run/secrets/grafana_admin_password